{
	"name": "laravel/laravel",
	"type": "project",
	"description": "The Laravel Framework.",
	"keywords": [
        "framework",
        "laravel"
    ],
	"license": "MIT",
	"require": {
		"php": "^7.2.5",
		"danielme85/laravel-log-to-db": "^2.0",
		"fideloper/proxy": "^4.0",
		"fruitcake/laravel-cors": "^2.0",
		"guzzlehttp/guzzle": "^7.2",
		"laravel-validation-rules/credit-card": "^1.3",
		"laravel/framework": "^7.0",
		"laravel/tinker": "^2.0",
		"laravel/ui": "^2.0",
		"nwidart/laravel-modules": "^6.2",
		"orangehill/iseed": "^2.6",
		"spatie/laravel-ray": "^1.5",
		"tymon/jwt-auth": "^1.0.0",
		"watson/rememberable": "^4.0",
		"webparking/laravel-queue-ensurer": "^1.3"
	},
	"require-dev": {
		"barryvdh/laravel-debugbar": "^3.2",
		"barryvdh/laravel-ide-helper": "^2.7",
		"facade/ignition": "^2.0",
		"fzaninotto/faker": "^1.4",
		"mockery/mockery": "^1.0",
		"nunomaduro/collision": "^4.1",
		"phpunit/phpunit": "^8.5"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"extra": {
		"laravel": {
			"dont-discover": []
		}
	},
	"autoload": {
		"files": [
            "app/helpers.php"
        ],
		"psr-4": {
			"App\\": "app/"
		},
		"classmap": [
            "database/seeds",
            "database/factories"
        ]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"compile": [
            "@php artisan config:clear",
            "@php artisan debugbar:clear",
            "@php artisan route:clear",
            "@php artisan cache:clear",
            "@php artisan view:clear",
            "@php artisan event:clear",
            "@php artisan key:generate --ansi",
            "@php artisan storage:link",
            "@php artisan migrate:fresh --force",
            "@php artisan module:seed",
            "@php artisan auth:clear-resets",
            "@php artisan route:cache",
            "@php artisan event:cache",
            "@php artisan config:cache",
            "@php artisan optimize",
            "composer dumpautoload",
            "npm run prod"
        ],
		"reseed": [
            "@php artisan config:clear",
            "@php artisan debugbar:clear",
            "@php artisan route:clear",
            "@php artisan cache:clear",
            "@php artisan view:clear",
            "@php artisan event:clear",
            "@php artisan migrate:fresh",
            "@php artisan module:seed"
        ],
    "tf": "clear && vendor/bin/phpunit --filter",
    "ts": "vendor/bin/phpunit --testsuite",
    "all-tests": "@php artisan test && vendor/bin/phpunit app/Modules",
    "run-artisan-test": "@php artisan test",
		"post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --nowrite",
            "@php artisan ide-helper:models --write"
        ],
		"post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
		"post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
	}
}
